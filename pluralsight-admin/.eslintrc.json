{
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],

  "rules": {
    "comma-dangle": 0,
    "brace-style": 0,
    "no-param-reassign": 0,
    "jsx-a11y/label-has-for": 0,
    "react/require-default-props": 0,
    "import/no-extraneous-dependencies": [
      "error", {
        "devDependencies": true
      }
    ]
  },

  "parser": "babel-eslint",

  "globals": {
    "describe": true,
    "it": true,
    "debugger": true,
    "document": true
  }
}
